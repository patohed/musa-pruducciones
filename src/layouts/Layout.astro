---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "MUSA PRODUCCIONES - Productora Integral Artística y Eventos",
  description = "Creamos, diseñamos y producimos experiencias artísticas memorables. Productora integral con enfoque innovador y moderno."
} = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="overflow-x-hidden">
    <slot />
  </body>
</html>
